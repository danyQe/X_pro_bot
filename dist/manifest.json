{
  "manifest_version": 3,
  "name": "XLENS",
  "version": "1.0.0",
  "description": "AI-powered Twitter analysis toolkit for fact-checking, sentiment analysis, and viral thread generation",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "src/assets/icon16.png",
      "48": "src/assets/icon48.png",
      "128": "src/assets/icon128.png"
    }
  },
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "contentScript.ts-loader.CH7ikJUP.js"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "css": [
        "src/content.css"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "resources": [
        "contentScript.ts.EPwlJMeo.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
